
@{
    ViewBag.Title = "Result";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item active">Kết quả</li>
</ol>
@{
    if (ViewBag.result == "success")
    {
        <div class="alert alert-success" role="alert">
            <h2 style="color:#3c763d">Đổi phòng thành công.</h2>
        </div>
        <div class="alert alert-warning" role="alert"> Thời gian đặt phòng kết thúc lúc @ViewBag.ngay_ra . Nhắc nhở khách hàng sau thời gian trên  !</div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">Có lỗi trong quá trình đổi phòng ! @ViewBag.result</div>
    }
    <a href="@Url.Action("ListPhongDangHoatDong","Index")">Back to list</a>
}

