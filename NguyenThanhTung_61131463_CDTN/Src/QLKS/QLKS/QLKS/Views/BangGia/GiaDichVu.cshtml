@model IEnumerable<QLKS.Models.tblDichVu>

@{
    ViewBag.Title = "Bảng giá dịch vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .thumb {
        width: 75px;
        height: 75px;
        background-color: transparent;
        background-image: none;
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
    }
</style>
<header id="gtco-header" class="gtco-cover gtco-cover-md g-header" role="banner" style="background-image: url(/Content/Home/images/img_bg_1.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</header>
<br /><br /><br /><br />
<div class="container">

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Bảng giá dịch vụ</h3>
        </div>
        <div class="panel-body">

            <div class="card mb-3">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover" id="dataTable" cellspacing="0">
                            <thead>
                                <tr>
                                    <th width="100px"></th>
                                    <th>
                                        Tên dịch vụ
                                    </th>
                                    <th>
                                        Đơn vị
                                    </th>
                                    <th>
                                        Giá
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="thumb" style="background-image:url(@Html.DisplayFor(modelItem => item.anh));" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ten_dv)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.don_vi)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.gia) VND
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

